CREATE TABLE users(
    user_id VARCHAR(225) PRIMARY KEY,
    fullname VARCHAR(225),
    username VARCHAR(225),
    hashPassword VARCHAR(225),
    email VARCHAR(225),
    roleUser VARCHAR(225)
);

CREATE TABLE quanly(
    quanLy_id VARCHAR(225) PRIMARY KEY,
    user_id VARCHAR(225),
    FOREIGN KEY (user_id) REFERENCES users(user_id)
);

CREATE TABLE giangvien(
    giangvien_id VARCHAR(225) PRIMARY KEY,
    user_id VARCHAR(225),
    chucVu VARCHAR(225),
    khoa VARCHAR(225),
    FOREIGN KEY (user_id) REFERENCES users(user_id)
);

CREATE TABLE khoa(
    khoa_id VARCHAR(225) PRIMARY KEY,
    khoa VARCHAR(225),
    maKhoa VARCHAR(10)
);

CREATE TABLE lop(
    lop_id VARCHAR(225) PRIMARY KEY,
    lop VARCHAR(225),
    maLop VARCHAR(10),
    maKhoa VARCHAR(10),
    tenLop VARCHAR(20),
    FOREIGN KEY (maKhoa) REFERENCES khoa(maKhoa)
);

